<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.candy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.Candy">
        <activity android:name=".Activitiy.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activitiy.LogInActivity" />
        <activity android:name=".Activitiy.SignUpActivity" />
        <activity android:name=".Activitiy.FindPasswordActivity" />
        <activity android:name=".Activitiy.FindIdActivity" />
        <activity android:name=".Activitiy.MainActivity" />
    </application>
</manifest>