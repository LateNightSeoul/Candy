<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.candy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Candy"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".challenge.ChallengeLectureActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize" />
        <activity android:name=".activity.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.BaseActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.LogInActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.SignUpActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.FindIdActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.FindPasswordActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.ResetPasswordActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.MainActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.ProblemActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".challenge.ChallengeDetailActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>